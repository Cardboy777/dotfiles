	ADW_COLOR_SCHEME_PREFER_DARK "1"
	COLOR_SCHEME "prefer-dark"
	GTK_THEME "Tokyonight-Dark-Moon"
	HYPRCURSOR_THEME "HyprBibataModernClassic"
