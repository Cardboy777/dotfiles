[Trigger]
Operation=Upgrade
Type=Package
Target=komikku

[Action]
Description=Patch Komikku connection condition to allow for 'LIMITED' VPN connections
When=PostTransaction
Exec=sudo sed -i 's/Gio.NetworkConnectivity.FULL/Gio.NetworkConnectivity.FULL or Gio.NetworkConnectivity.LIMITED/' '/usr/lib/python3.11/site-packages/komikku/application.py'
Depends=sed

